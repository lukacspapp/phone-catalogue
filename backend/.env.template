# ===================================
# PHONE CATALOGUE SERVICE CONFIG
# ===================================

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN='http://localhost:3000'

# Data Configuration
DATA_PATH=./data/phones.json

# ===================================
# BUSINESS LOGIC CONFIGURATION
# ===================================

# Pagination Settings
PHONE_CATALOGUE_PAGINATION_DEFAULT_PAGE=1
PHONE_CATALOGUE_PAGINATION_DEFAULT_LIMIT=12
PHONE_CATALOGUE_PAGINATION_MAX_LIMIT=100


# Sorting Settings
PHONE_CATALOGUE_SORT_DEFAULT_BY=name
PHONE_CATALOGUE_SORT_DEFAULT_ORDER=asc

# Search & Filtering Settings
PHONE_CATALOGUE_SEARCH_BRAND_CASE_SENSITIVE=false
PHONE_CATALOGUE_SEARCH_BRAND_PARTIAL_MATCH=true
PHONE_CATALOGUE_SEARCH_ALLOW_EMPTY_BRAND=true

# Price Validation Settings
PHONE_CATALOGUE_PRICE_VALIDATE_RANGE=true
PHONE_CATALOGUE_PRICE_MAX_RANGE=50000
PHONE_CATALOGUE_PRICE_MIN_ALLOWED=0